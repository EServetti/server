<h1 style="color:white; border-bottom: 1px solid white; padding-bottom:10px; display:flex; justify-content:center">Product list</h1>
<div class="divMain" style="display: flex; justify-content:center">
<div class="mainCont" style="margin: 30px 0 0 0; display: flex; flex-wrap: wrap; display: flex; justify-content:center ">
{{#each content}}
  <div class="productCont" style="background-color:white; width:350px; padding: 0 10px 0 10px; margin: 10px 30px 10px 30px; border: 1px solid black; border-radius:10px">
    <img src={{this.photo}} class="productImage" style="width: 300px; height: 300px; margin: 10px 0 0 0">
    <div class="productInfo" style="display: flex; justify-content:center;  flex-direction:column; align-items: center;  ">
      <button onclick="redirect('{{this._id}}')" id="SeeProduct" style="width:100%;color: white;background-color:#6781B4;margin: 5px;border: 0; border-radius:5px;">See Product</button>
    </div>
  </div>
{{/each}}
</div>
</div>
<script>
  function redirect(id) {
    try {
      window.location.href = "/products/" + id
    }catch(error) {
      return(error)
    }
  }
</script>